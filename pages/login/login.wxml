<!--login.wxml-->
<!--头像-->
<view class="login_bg">
  <view class="login_avatar">
    <van-image round width="180rpx" height="180rpx" src="https://img.yzcdn.cn/vant/cat.jpeg"/>
  </view>
  <view class="login_avatar_title">未<text style="color:yellow">登录</text>，请点击登录</view>
</view>
<!--信息-->
<view class="login_info">
  <van-cell title="个人信息" is-link url="../index/index" />
  <van-cell title="修改密码" is-link url="../index/index" />
</view>
<!--底部导航-->
<van-tabbar active="{{ footerActive }}" bind:change="onFooterChange">
  <van-tabbar-item>
    <image slot="icon" src="{{ icon.normal }}" mode="aspectFit" style="width: 30px; height: 18px;"/>
    <image slot="icon-active" src="{{ icon.active }}" mode="aspectFit" style="width: 30px; height: 18px;"/>
    首页
  </van-tabbar-item>
  <van-tabbar-item icon="search">地图</van-tabbar-item>
  <van-tabbar-item icon="setting-o">我的</van-tabbar-item>
</van-tabbar>
