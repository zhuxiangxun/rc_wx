/**transaction.wxss**/
.device {
  width: 750rpx;
  height: 100vh;
  background-color: #f5f5f5;
}
.device_search {
  width: 750rpx;
  height: 110rpx;
  position: relative;
  top: 10rpx;
}
.device_advanced_search {
  width: 750rpx;
  height: 120rpx;
  border-top: 10px solid #f5f5f5;
}
.device_list {
  width: 750rpx;
  height: calc(100vh - 250rpx);
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  overflow-y: auto;
}
.device_list:after{
  content:'';
  width: 340rpx;
}
.device_list_item {
  width: 340rpx;
  height: 400rpx;
  margin-bottom: 40rpx;
  border: 1px solid #CCC;
}
.device_list_item_img {
  width: 340rpx;
  height: 240rpx;
}
.device_list_item_title {
  width: 320rpx;
  height: 80rpx;
  line-height: 40rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 28rpx;
  text-indent: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp :2;
  -webkit-box-orient: vertical;
}
.device_list_item_price {
  width: 320rpx;
  height: 50rpx;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.device_list_item_price_num {
  color: red;
}
