<!--index.wxml-->
<!--创新平台 创业平台 双创机构 重点人才 模板-->
<import src="../../templates/indexHeader/indexHeader.wxml" /> 
<template is="indexHeader"></template>
<!--青岛人才创业平台地图-->
<view class="map_bg">
  <view class="map_content">
    <view class="map_content_title">青岛人才创业平台地图</view>
    <view class="map_content_main">
      <view class="map_content_main_list">
        <view class="map_content_main_list_item">
          <van-icon name="location" size="30px" />
          <view class="map_content_main_list_item_title">找平台</view>
        </view>
        <view class="map_content_main_list_item">
          <van-icon name="location" size="30px" />
          <view class="map_content_main_list_item_title">找政策</view>
        </view>
        <view class="map_content_main_list_item">
          <van-icon name="location" size="30px" />
          <view class="map_content_main_list_item_title">找项目</view>
        </view>
        <view class="map_content_main_list_item">
          <van-icon name="location" size="30px" />
          <view class="map_content_main_list_item_title">找资金</view>
        </view>
        <view class="map_content_main_list_item">
          <van-icon name="location" size="30px" />
          <view class="map_content_main_list_item_title">找场地</view>
        </view>
        <view class="map_content_main_list_item">
          <van-icon name="location" size="30px" />
          <view class="map_content_main_list_item_title">找服务</view>
        </view>
      </view>
      <view class="map_content_main_img">
        <!-- <van-image width="100%" height="100%" src="https://img.yzcdn.cn/vant/cat.jpeg" /> -->
        <van-image width="100%" height="100%"></van-image>
      </view>
    </view>
  </view>
</view>
<!--外部链接-->
<view class="link">
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要工作</view>
  </view>
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要人才</view>
  </view>
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要申报</view>
  </view>
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要评价</view>
  </view>
  <view class="link_item" bindtap="transactionClick">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要交易</view>
  </view>
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要补贴</view>
  </view>
  <view class="link_item" bindtap="deviceClick">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要设备</view>
  </view>
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要投融资</view>
  </view>
  <view class="link_item">
    <van-icon name="location" size="30px" />
    <view class="link_item_title">我要问诊</view>
  </view>
</view>
<!--信息快讯-->
<view class="news" bindtap="newsClick">信息快讯</view>
<!--底部导航-->
<van-tabbar active="{{ footerActive }}" bind:change="onFooterChange">
  <van-tabbar-item>
    <image slot="icon" src="{{ icon.normal }}" mode="aspectFit" style="width: 30px; height: 18px;"/>
    <image slot="icon-active" src="{{ icon.active }}" mode="aspectFit" style="width: 30px; height: 18px;"/>
    首页
  </van-tabbar-item>
  <van-tabbar-item icon="search">地图</van-tabbar-item>
  <van-tabbar-item icon="setting-o">我的</van-tabbar-item>
</van-tabbar>
