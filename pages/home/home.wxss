/**home.wxss**/
@import "../../templates/template.wxss";
page {
  background-color: #ebecf0;
}
/**青岛人才创业平台地图**/
.map_content {
  width: 710rpx;
  height: 700rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  background-color: #FFF;
  border-radius: 16rpx;
}
.map_content_title {
  width: 670rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 36rpx;
  margin: 0 20rpx;
  color: #0c499c;
  font-weight: 600;
  letter-spacing: 2rpx;
}
.map_content_list {
  width: 670rpx;
  height: 200rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
.map_content_list_item {
  width: 100rpx;
  height: 200rpx;
  margin-top: 10rpx;
  text-align: center;
}
.map_content_list_item_img {
  width: 100rpx;
  height: 100rpx;
}
.map_content_list_item_title {
  width: 100rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #535353;
}
.map_content_img {
  width: 670rpx;
  height: 400rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
/**外部链接**/
.link {
  width: 710rpx;
  height: 400rpx;
  margin-left: 20rpx;
  margin-top: 40rpx;
  background-color: #FFF;
  border-radius: 16rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content:flex-start; 
}
.link:after{
  content:'';
  width: 170rpx;
}
.link_item {
  width: 170rpx;
  height: 130rpx;
  margin-top: 40rpx;
  text-align: center;
}
.link_item_img {
  width: 90rpx;
  height: 90rpx;
  margin-left: 35rpx;
}
.link_item_title {
  width: 170rpx;
  line-height: 40rpx;
  font-size: 28rpx;
}
/**信息快讯**/
.news {
  width: 320rpx;
  height: 90rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}