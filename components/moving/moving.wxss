/**moving.wxss**/
.moving_list {
  width: 750rpx;
  height: calc(100vh - 120rpx);
  border-top: 10rpx solid #f5f5f5;
  overflow-y: scroll;
}
.moving_list_item {
  width: 100%;
  height: 160rpx;
  border-bottom: 1px solid #f5f5f5;
}

.moving_list_item_info {
  width: 480rpx;
  height: 120rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
  float: left;
}
.moving_list_item_info_title {
  width: 480rpx;
  height: 70rpx;
  line-height: 35rpx;
  font-size: 28rpx;
  text-indent: 2rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp :2;
  -webkit-box-orient: vertical;
}
.moving_list_item_info_time {
  width: 480rpx;
  height: 35rpx;
  line-height: 35rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #9f9999;
}
.moving_list_item_img {
  width: 200rpx;
  height: 120rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  float: right;
}